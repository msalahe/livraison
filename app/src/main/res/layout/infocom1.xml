<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="165dp"
        android:layout_height="95dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/intitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="19dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/space_mono_bold"
        android:text="Information Commande" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_near_me_black_24dp">

            </ImageView>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/nomClient1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Ayoube EL Mesbahi"
                android:textColor="#020101"
                android:textStyle="bold"
                app:fontFamily="@font/chivo_black"></TextView>

            <TextView
                android:id="@+id/addresCommande1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="39dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:text="376,LOTS JADE TGHAT ,FES"
                android:textColor="#020101"
                android:textStyle="bold"
                app:fontFamily="@font/cousine_italic" />

        </RelativeLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>
    <View
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_height="2dip"
        android:background="#ADA9A9"
        android:paddingBottom="10dip"
        android:layout_marginTop="12dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:text="CrÃ©neau horaire"
            android:textColor="#020101"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/dateCommande1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/t"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:text="17:00-22:00"></TextView>
    </RelativeLayout>

    <View
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_height="2dip"
        android:background="#ADA9A9"
        android:paddingBottom="10dip"
        android:layout_marginTop="12dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ttx"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="20dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#020101"
            android:textStyle="bold"
            android:text="Status">

        </TextView>

        <TextView
            android:id="@+id/etatCommande1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ttx"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:text="En cours "
            app:fontFamily="@font/poppins"></TextView>
    </RelativeLayout>
    <View
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_height="2dip"
        android:background="#ADA9A9"
        android:paddingBottom="10dip"
        android:layout_marginTop="12dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonRetour"
            android:layout_width="wrap_content"
            android:layout_marginStart="125dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:textColor="#E9DCDC"
            android:background="@drawable/roudedretoure"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:text="Retour" />


    </LinearLayout>




</LinearLayout>