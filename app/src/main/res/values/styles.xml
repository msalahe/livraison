<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="conneter">
        <item name="colorBackground">#2DEB09</item>
        <item name="length">LONG</item>
        <item name="iconLeft">@drawable/ic_check_black_24dp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">20dp</item>
        <item name="strokeWidth">3dp</item>
        <item name="cornerRadius">3dp</item>
    </style>
    <style name="notConnect">
        <item name="colorBackground">#F70C16</item>
        <item name="length">LONG</item>
        <item name="iconLeft">@drawable/ic_block_black_24dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="strokeWidth">3dp</item>
        <item name="cornerRadius">3dp</item>
    </style>
    <style name="warni">
        <item name="colorBackground">#F08605</item>
        <item name="length">LONG</item>
        <item name="iconLeft">@drawable/ic_warning_black_24dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="strokeWidth">3dp</item>
        <item name="cornerRadius">3dp</item>
    </style>

</resources>
